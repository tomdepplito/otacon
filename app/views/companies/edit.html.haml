%h1= "Edit #{@company.name}"

= form_for @company do |f|
  %p
    = f.label "Company Name:"
    = f.text_field :name
  %p.button
    = f.submit

- @employees.each do |employee|
  %p
    = "#{employee.user.email} - #{employee.title}"
    = link_to 'Remove', employee_path(employee.id), :method => 'delete'
    = link_to 'Edit', edit_employee_path(employee.id)

= link_to 'Add Employee to Company', new_company_employee_path(@company.id)

