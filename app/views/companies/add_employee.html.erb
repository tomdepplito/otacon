<h1><%= "#{@company.name} Employee Roster" %></h1>

<%= form_tag "/companies/#{@company.id}/add_employee", :method => 'post' do |f| %>
  <%= label '', "Employee Email:" %>
  <%= text_field_tag :email %>
  <br/>
  <%= hidden_field_tag :company_id, @company.id %>
  <br/>
  <%= submit_tag 'Add Employee' %>
<% end %>
