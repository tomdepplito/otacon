<%= link_to subject_shortner(rfi.subject), rfi_path(rfi.id) %>

<% if defined? match %>
  <%= match.nil? ? "" : "#{match}%" %>
<% end %>
<div class='response'>
    <%= link_to "Respond", {:controller => "rfis", :action => "new",
                            :parent_id => rfi.parent_id ? rfi.parent_id : rfi.id,
                            :receiver_id => rfi.sender_id } %>
</div>
