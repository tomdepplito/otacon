<h1><%= "Create RFI" %></h1>

<%= form_for @rfi, :html => {:multipart => true} do |f| %>
  <%= f.label "Body" %>
  <%= f.text_area :body %>
  <br/>
  <%= f.label "Street Address" %>
  <%= f.text_field :street_address %>
  <br/>
  <%= label :miles, "Within" %>
  <%= text_field_tag :miles %>
  <%= label :miles , "Miles of me" %>
  <%= hidden_field_tag :parent_id, @rfi.parent_id %>
  <br/>
  <%= f.file_field :attachment %>
  <br/>
  <%= f.label :remote_attachment_url, "or image URL" %><br />
  <%= f.text_field :remote_attachment_url %>
    <br/>
  <%= f.submit %>
<% end %>
