<!DOCTYPE html>
<html>
<head>
  <title>Otacon</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
  <%= yield :head_pub_key %>
</head>
<body>
  <%= render :partial => "shared/header" %>
  <% if signed_in? %>
    <% unless current_user.admin_of %>
      <%= link_to 'Create Company', new_company_path %>
    <% end %>
    <% if current_user.company %>
      <%= link_to "RFIs", current_user.company.subscription.active ? rfis_path : my_rfis_path %>
      <%= link_to "Edit Specialty List", edit_specialty_list_path(current_user.id) %>
    <% else %>
      <%= link_to "RFIs", my_rfis_path %>
    <% end %>
    <%= link_to "Edit My Profile", edit_user_path(current_user.id) %>
    <% if company = Company.find_by_admin_id(current_user.id) %>
      <%= link_to "Company Admin Page", edit_company_path(company.id) %>
    <% end %>
  <% end %>
<div>
  <%= flash[:error] %>
  <%= flash[:success] %>
  <%= flash[:alert] %>
</div>
<%= yield %>

</body>
</html>
